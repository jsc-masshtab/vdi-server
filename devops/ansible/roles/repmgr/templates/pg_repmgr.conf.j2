listen_addresses = '*'
port = {{ pg_port }}
max_wal_senders = {{ pg_max_wal_senders }}
wal_keep_segments = {{ pg_wal_keep_segments }}
wal_level = replica
fsync = on
hot_standby = on
wal_log_hints = on
archive_mode = on
archive_command = '/bin/true'
shared_preload_libraries = 'repmgr'
max_replication_slots = {{ pg_max_replication_slots }}
