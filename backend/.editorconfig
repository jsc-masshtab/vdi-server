root = true

[*]
    end_of_line = LF
    charset = utf-8
    indent_size = 4
    indent_style = space

[*.vim]
    insert_final_newline = true
    trim_trailing_whitespace = true

[*.yml]
    indent_size = 2

[{Makefile,**.mk}]
    indent_style = tab
    indent_size = 4

[*.py]
    indent_size     = 4
    max_line_length = 88

[*.json]
    indent_style    = space
    indent_size     = 2

[*.yaml]
    indent_size = 2
